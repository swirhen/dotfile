escape ^t^t
defencoding utf-8
encoding utf-8 utf-8
hardstatus alwayslastline "[%02c] %-w%{=b bw}%n %t%{-}%+w"
startup_message off
autodetach on
vbell off
defscrollback 3000
nethack on

bind s
bind n next
bind ^n next
bind p prev
bind ^p prev
bind ^a other
bind a other

bindkey ^j next
bindkey ^k prev
bindkey ^s ^k

bindkey ^y split
bindkey ^u focus
bind ^o only
bind o only
bindkey ^g copy

#bind r eval 'echo "Resize window"' 'command -c resize'
#bind ^r eval 'echo "Resize window"' 'command -c resize'
bindkey ^r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

bind j encoding sjis utf8
bind u encoding utf8
